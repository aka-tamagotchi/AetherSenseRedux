{
   "tasks": [
     {
       "name": "commit-message-linter",
       "command": "dotnet",
       "args": ["husky", "exec", ".husky/csx/commit-lint.csx", "--args", "${args}"]
     },
     {
       "name": "dotnet-format",
       "group": "pre-commit",
       "command": "dotnet-format",
       "args": ["--include", "${staged}"],
       "include": ["**/*.cs"]
     }
   ]
 }